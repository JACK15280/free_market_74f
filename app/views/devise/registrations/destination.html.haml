%html
  = stylesheet_link_tag "destinations", :media => "all"
  %body
    .title
      発送元・お届け先住所入力
    %main
      - required = "必須"
      - option = "任意"
      = form_for @destination do |f|
        .field__top
          .field__label
            = "お名前"
            %span
              = required
              %br/
            = f.text_field :family_name, autofocus: true, autocomplete: "family_name", placeholder: "例) 山田"
        - if @destination.errors[:family_name]
          #error_explanation
            = @destination.errors.full_messages_for(:family_name).first
        .field__next
          = f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "例) 彩"
        - if @destination.errors[:first_name]
          #error_explanation
            = @destination.errors.full_messages_for(:first_name).first
        .field
          .field__label
            = "お名前かな"
            %span
              = required
              %br/
            = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana", placeholder: "例) やまだ"
        - if @destination.errors[:family_name_kana]
          #error_explanation
            = @destination.errors.full_messages_for(:family_name_kana).first
        .field__next
          = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "例) あや"
        - if @destination.errors[:first_name_kana]
          #error_explanation
            = @destination.errors.full_messages_for(:first_name_kana).first
        .field
          .field__label
            = "郵便番号"
            %span
              = required
              %br/
            = f.text_field :post_code, autofocus: true, autocomplete: "post_code", placeholder: "例) 123-4567"
        - if @destination.errors[:post_code]
          #error_explanation
            = @destination.errors.full_messages_for(:post_code).first
        .field
          .field__label
            = "都道府県"
            %span
              = required
              %br/
            = f.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: "--"}, {class: 'input__select'}
        - if @destination.errors[:prefecture]
          #error_explanation
            = @destination.errors.full_messages_for(:prefecture).first
        .field
          .field__label
            = "市区町村"
            %span
              = required
              %br/
            = f.text_field :city, autofocus: true, autocomplete: "city", placeholder: "例) 横浜市緑区"
        - if @destination.errors[:city]
          #error_explanation
            = @destination.errors.full_messages_for(:city).first
        .field
          .field__label
            = "番地"
            %span
              = required
              %br/
            = f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "例) 青山1-1-1"
        - if @destination.errors[:address]
          #error_explanation
            = @destination.errors.full_messages_for(:address).first
        .field
          .field__label__option
            = "建物名"
            %span
              = option
              %br/
            = f.text_field :building_name, autofocus: true, autocomplete: "building_name", placeholder: "例) 柳ビル103"
        .field
          .field__label__option
            = "電話"
            %span  
              = option
              %br/
            = f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", placeholder: "例) 09012345678"
          = f.submit "登録する", class: "btn"