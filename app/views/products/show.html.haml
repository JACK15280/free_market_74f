%p.imageclass
  = image_tag @product.image.image

.product__price
  = @product.price + "円"
.product__name
  = @product.name

%table{border:"1", style:"border-collapse: collapse"} 
  %tr
    %th 
      出品者
    %th
      = @product.user.nickname
  %tr
    %th
      カテゴリー
    %th
      = @product.category.name
  %tr
    %th
      ブランド
    %th
      = @product.brand.name
  %tr
    %th
      サイズ
    %th
      = @product.size
  %tr
    %th
      商品の状態
    %th
      = @product.status
  %tr
    %th
      配送料の負担
    %th
      = @product.cost + "円"
  %tr
    %th
      発送元の地域
    %th
      = @product.prefecture_id

- unless user_signed_in?
  = link_to "購入する", root_path

- if user_signed_in?
  = link_to "編集", edit_product_path(@product.id)
  = link_to "削除", product_path(@product.id), method: "DELETE"